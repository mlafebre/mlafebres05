<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mlafebres05.Modificar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Modificar Estudiante" FontSize="20" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtCodigo" Placeholder="Modificar Còdigo" Keyboard="Numeric"/>
            <Entry x:Name="txtNombre" Placeholder="Modificar Nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Modificar Apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Modificar Edad" Keyboard="Numeric"/>
         
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnGuardar" Text="Actualizar"   Grid.Row="1" Grid.Column="0" Clicked="btnModificar_Clicked"/>
                <Button x:Name="btbEliminar" Text="Eliminar"   Grid.Row="1" Grid.Column="1"  Clicked="btnEliminar_Clicked"/>

            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>